class Post {
  constructor(author, title, text, likes, comments) {
    this.author = author;
    this.title = title;
    this.text = text;
    this.likes = likes;
    this.comments = comments;
  }

  getAuthor() {
    return this.author;
  }

  getTitle() {
    return this.title;
  }

  getText() {
    return this.text;
  }

  getLikes() {
    return this.likes;
  }

  getComments() {
    return this.comments;
  }

  getNumComments() {
    return this.comments.length;
  }

  setAuthor(newAuthor) {
    this.author = newAuthor;
  }

  setText(newText) {
    this.text = newText;
  }

  create() {
    // TODO: Add post to database
  }

  delete() {
    // TODO: Remove post from database
  }

  like() {
    this.likes++;
  }

  dislike() {
    this.likes--;
  }
}

